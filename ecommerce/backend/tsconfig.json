{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"backend/shared/**/*",
		"backend/gateway/**/*",
		"backend/services/**/*",
		"backend/tests/**/*"
	],
	"exclude": ["node_modules", "dist"]
}
