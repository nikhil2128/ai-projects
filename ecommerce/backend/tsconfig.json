{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["shared/**/*", "services/**/*", "handlers/**/*", "tests/**/*"],
	"exclude": ["node_modules", "dist"]
}
