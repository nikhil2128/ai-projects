# Application
NODE_ENV=development
PORT=3000

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=invoice_user
DB_PASSWORD=invoice_pass
DB_DATABASE=invoice_processor

# Redis (for BullMQ queue)
REDIS_HOST=localhost
REDIS_PORT=6379

# File Storage
UPLOAD_DIR=./uploads

# Invoice Processing Queue
QUEUE_CONCURRENCY=10
QUEUE_MAX_RETRIES=3
QUEUE_RETRY_DELAY_MS=5000

# OpenAI (optional - for LLM-based extraction)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Extraction Strategy: 'regex' | 'openai'
EXTRACTION_STRATEGY=regex

# Rate Limiting
THROTTLE_TTL_SECONDS=60
THROTTLE_LIMIT=200
